<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selectable_lamp_category_added_item_background"
    android:orientation="horizontal"
    android:paddingTop="@dimen/_16sdp"
    android:paddingBottom="@dimen/_16ssp">


    <TextView
        android:id="@+id/tv_language_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/_24sdp"
        android:ellipsize="end"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_16ssp" />

    <ImageView
        android:id="@+id/iv_current_language"
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_24sdp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/_16sdp"
        android:src="@mipmap/ic_zone_flag_current"
        android:visibility="gone" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="control"
            type="com.ihomey.linkuphome.data.entity.Device" />

        <variable
            name="handlers"
            type="com.ihomey.linkuphome.control.BaseControlFragment.ToolBarEventHandler" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <com.ihomey.linkuphome.widget.CompatToolbar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F7F7F7"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:onClick="@{handlers::onClick}"
                android:src="@drawable/ic_back" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:onClick="@{handlers::onClick}"
                android:text="@{control.name}"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_18ssp" />

            <ImageView
                android:id="@+id/iv_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_gravity="end|center_vertical"
                android:src="@mipmap/ic_setting_red" />

        </com.ihomey.linkuphome.widget.CompatToolbar>


        <RadioGroup
            android:id="@+id/rg_control_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_18sdp"
            android:background="#FFFFFF"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolBar">

            <RadioButton
                android:id="@+id/rb_control_rgb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:checked="true"
                android:drawableStart="@drawable/ic_arrow_left"
                android:drawablePadding="@dimen/_8sdp"
                android:drawableTint="@color/radio_text_color_t1_control"
                android:text="@string/title_rgb"
                android:textColor="@color/radio_text_color_t1_control"
                android:textSize="@dimen/_16ssp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/rb_control_warm_cold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_42sdp"
                android:button="@null"
                android:drawableEnd="@drawable/ic_arrow_right"
                android:drawablePadding="@dimen/_8sdp"
                android:drawableTint="@color/radio_text_color_t1_control"
                android:text="@string/title_cct"
                android:textColor="@color/radio_text_color_t1_control"
                android:textSize="@dimen/_16ssp"
                android:textStyle="bold" />
        </RadioGroup>


        <com.ihomey.linkuphome.widget.NoScrollViewpager
            android:id="@+id/ble_control_vp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/rg_control_switch" />

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.65"
            android:id="@+id/guideLine"/>

        <CheckBox
            android:id="@+id/device_state_cb_power"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_56sdp"
            android:background="@drawable/selector_control_btn_power_background"
            android:button="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/guideLine" />

        <ImageButton
            android:id="@+id/btn_device_lighting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_56sdp"
            android:background="@mipmap/ic_lighting"
            android:button="@null"
            android:checked="false"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/guideLine" />


        <RelativeLayout
            android:id="@+id/device_control_middle_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/btn_device_scene_setting"
            app:layout_constraintTop_toBottomOf="@+id/device_state_cb_power">

            <ImageView
                android:id="@+id/device_brightness_icon_low"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_54sdp"
                android:background="@mipmap/ic_brightness_low"
                android:button="@null" />

            <SeekBar
                android:id="@+id/device_seek_bar_brightness"
                style="@style/Widget.SeekBar.Normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/device_brightness_icon_high"
                android:layout_toEndOf="@+id/device_brightness_icon_low"
                android:clickable="false"
                android:max="85"
                android:paddingStart="@dimen/_6sdp"
                android:paddingEnd="@dimen/_6sdp" />

            <ImageView
                android:id="@+id/device_brightness_icon_high"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_54sdp"
                android:background="@mipmap/ic_brightness_high"
                android:button="@null" />

        </RelativeLayout>


        <com.ihomey.linkuphome.widget.SingleSelectToggleGroup
            android:id="@+id/device_cycling_sstg_speed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_54sdp"
            android:layout_marginRight="@dimen/_54sdp"
            android:background="@drawable/device_color_cycling_btn_unchecked_bg"
            android:saveEnabled="true"
            android:textSize="@dimen/_12ssp"
            android:visibility="gone"
            app:buttonHeight="@dimen/_36sdp"
            app:buttonSpacing="auto"
            app:buttonWidth="@dimen/_90sdp"
            app:checkedBackground="@drawable/device_color_cycling_btn_checked_bg"
            app:checkedTextColor="@android:color/white"
            app:layout_constraintBottom_toTopOf="@+id/btn_device_scene_setting"
            app:layout_constraintTop_toBottomOf="@+id/device_state_cb_power"
            app:textButtons="@array/speed_choices"
            app:uncheckedTextColor="@android:color/white"
            app:wrap="false" />

        <ImageButton
            android:id="@+id/btn_device_cycling"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_color_cycling"
            android:button="@null"
            android:layout_marginStart="@dimen/_36sdp"
            android:layout_marginBottom="@dimen/_36sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/btn_device_scene_setting"
            app:layout_constraintLeft_toLeftOf="parent" />


        <ImageButton
            android:id="@+id/btn_device_scene_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_scene"
            android:button="@null"
            android:checked="false"
            android:onClick="@{handlers::onClick}"
            android:layout_marginBottom="@dimen/_36sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/btn_device_cycling"
            app:layout_constraintRight_toLeftOf="@+id/btn_device_environmental_indicators" />


        <ImageButton
            android:id="@+id/btn_device_environmental_indicators"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_environmental_indicators"
            android:button="@null"
            android:checked="false"
            android:layout_marginBottom="@dimen/_36sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/btn_device_scene_setting"
            app:layout_constraintRight_toLeftOf="@+id/btn_device_alarm_setting" />


        <ImageButton
            android:id="@+id/btn_device_alarm_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_alarm_setting"
            android:button="@null"
            android:checked="false"
            android:onClick="@{handlers::onClick}"
            android:layout_marginEnd="@dimen/_36sdp"
            android:layout_marginBottom="@dimen/_36sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/btn_device_environmental_indicators"
            app:layout_constraintRight_toRightOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
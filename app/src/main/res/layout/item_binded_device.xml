<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_bonded_devices_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/control_unit_bg_normal"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/iv_device_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:scaleX="0.65"
        android:scaleY="0.65" />

    <TextView
        android:id="@+id/tv_device_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/_48sdp"
        android:layout_toEndOf="@+id/iv_device_icon"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/text_colorPrimary"
        android:textSize="@dimen/_18ssp" />

    <CheckBox
        android:id="@+id/cb_device_power_state"
        android:layout_width="@dimen/_32sdp"
        android:layout_height="@dimen/_32sdp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/_4sdp"
        android:background="@drawable/selector_control_btn_power_background"
        android:button="@null" />

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:orientation="vertical">

    <com.ihomey.linkuphome.widget.CompatToolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F7F7F7"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/title_contact"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_18ssp" />
    </com.ihomey.linkuphome.widget.CompatToolbar>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_m1_instruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_21sdp"
        android:layout_marginEnd="@dimen/_21sdp"
        android:layout_marginTop="@dimen/_42sdp"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="@dimen/_12sdp"
        app:cardElevation="@dimen/_6sdp"
        app:contentPaddingTop="@dimen/_8sdp"
        app:layout_constraintTop_toBottomOf="@+id/toolBar"
        app:layout_constraintVertical_chainStyle="packed">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_m1"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_14sdp"
                android:background="@drawable/bg_instruction_bottom"
                android:orientation="vertical"
                android:paddingTop="@dimen/_21sdp"
                android:paddingBottom="@dimen/_81sdp"
                android:paddingStart="@dimen/_16sdp"
                android:paddingEnd="@dimen/_16sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingMultiplier="1.25"
                    android:text="@string/msg_contact"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_16ssp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SALES@IHOMEY.CC"
                    android:layout_marginTop="@dimen/_24sdp"
                    android:textColor="@color/control_tab_item_selected_color"
                    android:textSize="@dimen/_18ssp" />

            </LinearLayout>




    </androidx.cardview.widget.CardView>





</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="control"
            type="com.ihomey.linkuphome.data.entity.Device" />

        <variable
            name="handlers"
            type="com.ihomey.linkuphome.control.BaseControlFragment.ToolBarEventHandler" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">


        <com.ihomey.linkuphome.widget.CompatToolbar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F7F7F7"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:onClick="@{handlers::onClick}"
                android:src="@drawable/ic_back" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_marginStart="@dimen/_32sdp"
                android:layout_marginEnd="@dimen/_32sdp"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_gravity="center"
                android:onClick="@{handlers::onClick}"
                android:text="@{control.name}"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_18ssp" />
        </com.ihomey.linkuphome.widget.CompatToolbar>


        <ImageView
            android:id="@+id/device_circle_iv_bg"
            android:layout_width="@dimen/_360sdp"
            android:layout_height="@dimen/_360sdp"
            android:layout_marginStart="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:background="@mipmap/control_circle_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolBar" />

        <ImageView
            android:id="@+id/device_circle_iv"
            android:layout_width="@dimen/_240sdp"
            android:layout_height="@dimen/_240sdp"
            android:layout_marginTop="@dimen/_55sdp"
            android:background="@mipmap/control_icon_circle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolBar" />

        <com.ihomey.linkuphome.widget.RGBCircleView
            android:id="@+id/device_color_rgb_cv"
            android:layout_width="@dimen/_236sdp"
            android:layout_height="@dimen/_236sdp"
            android:layout_marginStart="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_58sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolBar" />

        <ImageView
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_166sdp"
            android:background="@drawable/logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolBar" />

        <CheckBox
            android:id="@+id/device_state_cb_power"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_45sdp"
            android:layout_marginEnd="@dimen/_56sdp"
            android:background="@drawable/selector_control_btn_power_background"
            android:button="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/device_circle_iv" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.925" />


        <RelativeLayout
            android:id="@+id/device_control_middle_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/btn_device_lighting"
            app:layout_constraintTop_toBottomOf="@+id/device_state_cb_power">

            <ImageView
                android:id="@+id/device_brightness_icon_low"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_54sdp"
                android:background="@mipmap/ic_brightness_low"
                android:button="@null" />

            <SeekBar
                android:id="@+id/device_seek_bar_brightness"
                style="@style/Widget.SeekBar.Normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/device_brightness_icon_high"
                android:layout_toEndOf="@+id/device_brightness_icon_low"
                android:clickable="false"
                android:paddingStart="@dimen/_6sdp"
                android:paddingEnd="@dimen/_6sdp"
                android:max="85"
              />

            <ImageView
                android:id="@+id/device_brightness_icon_high"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_54sdp"
                android:background="@mipmap/ic_brightness_high"
                android:button="@null" />

        </RelativeLayout>


        <com.ihomey.linkuphome.widget.SingleSelectToggleGroup
            android:id="@+id/device_cycling_sstg_speed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_54sdp"
            android:layout_marginRight="@dimen/_54sdp"
            android:background="@drawable/device_color_cycling_btn_unchecked_bg"
            android:saveEnabled="true"
            android:textSize="@dimen/_12ssp"
            android:visibility="gone"
            app:buttonHeight="@dimen/_36sdp"
            app:buttonSpacing="auto"
            app:buttonWidth="@dimen/_90sdp"
            app:checkedBackground="@drawable/device_color_cycling_btn_checked_bg"
            app:checkedTextColor="@android:color/white"
            app:layout_constraintBottom_toTopOf="@+id/btn_device_lighting"
            app:layout_constraintTop_toBottomOf="@+id/device_state_cb_power"
            app:textButtons="@array/speed_choices"
            app:uncheckedTextColor="@android:color/white"
            app:wrap="false" />

        <ImageButton
            android:id="@+id/btn_device_cycling"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_color_cycling"
            android:layout_marginStart="@dimen/_54sdp"
            android:button="@null"
            app:layout_constraintBottom_toTopOf="@+id/guideLine"
            app:layout_constraintStart_toStartOf="parent" />


        <ImageButton
            android:id="@+id/btn_device_lighting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_lighting"
            android:button="@null"
            android:checked="false"
            app:layout_constraintBottom_toTopOf="@+id/guideLine"
            app:layout_constraintLeft_toRightOf="@+id/btn_device_cycling"
            app:layout_constraintRight_toLeftOf="@+id/btn_device_scene_setting" />

        <ImageButton
            android:id="@+id/btn_device_scene_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_scene"
            android:onClick="@{handlers::onClick}"
            android:button="@null"
            android:checked="false"
            app:layout_constraintBottom_toTopOf="@+id/guideLine"
            app:layout_constraintLeft_toRightOf="@+id/btn_device_lighting"
            app:layout_constraintRight_toLeftOf="@+id/btn_device_alarm_setting" />

        <ImageButton
            android:id="@+id/btn_device_alarm_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{handlers::onClick}"
            android:layout_marginEnd="@dimen/_54sdp"
            android:background="@mipmap/ic_alarm"
            android:button="@null"
            app:layout_constraintBottom_toTopOf="@+id/guideLine"
            app:layout_constraintRight_toRightOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
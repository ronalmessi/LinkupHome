<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/layout_timer_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/_24sdp">

        <com.ihomey.linkuphome.widget.wheelpicker.WheelPicker
            android:id="@+id/wheel_timer_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_24sdp"
            android:paddingRight="@dimen/_24sdp"
            app:wheel_atmospheric="true"
            app:wheel_curved="true"
            app:wheel_cyclic="true"
            app:wheel_item_text_color="@color/wheel_text_color"
            app:wheel_item_text_size="@dimen/_42ssp"
            app:wheel_selected_item_text_color="@color/wheel_selected_text_color" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="@dimen/_15sdp"
            android:paddingRight="@dimen/_15sdp"
            android:paddingBottom="@dimen/_12sdp"
            android:text=":"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_36ssp" />

        <com.ihomey.linkuphome.widget.wheelpicker.WheelPicker
            android:id="@+id/wheel_timer_minute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_24sdp"
            android:paddingRight="@dimen/_24sdp"
            app:wheel_atmospheric="true"
            app:wheel_curved="true"
            app:wheel_cyclic="true"
            app:wheel_item_text_color="@color/wheel_text_color"
            app:wheel_item_text_size="@dimen/_42ssp"
            app:wheel_selected_item_text_color="@color/wheel_selected_text_color" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_timer_setting_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@null"
        android:gravity="start|center_vertical"
        android:text="@string/action_edit"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_18ssp" />



    <com.suke.widget.SwitchButton
        android:id="@+id/switch_button_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_marginBottom="@dimen/_16sdp"
        app:sb_checked_color="@color/control_tab_item_selected_color"
        app:sb_show_indicator="false" />

</RelativeLayout>


<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_item_sub_zone_list"
    android:orientation="vertical">

    <com.daimajia.swipe.SwipeLayout
        android:id="@+id/swipeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:clickToClose="true">

        <TextView
            android:id="@+id/btn_delete"
            android:layout_width="@dimen/_69sdp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_item_sub_zone_list_delete"
            android:gravity="center"
            android:text="@string/action_delete"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_16ssp" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:paddingStart="@dimen/_6sdp"
            android:paddingEnd="@dimen/_8sdp">

            <ImageView
                android:id="@+id/iv_sub_zone_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_zone_garden"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/tv_sub_zone_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_12sdp"
                android:ellipsize="end"
                android:gravity="start|center_vertical"
                android:singleLine="true"
                android:text="@string/title_faqs"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_18ssp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/iv_sub_zone_type"
                app:layout_constraintRight_toLeftOf="@+id/ll_operation"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/ll_operation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/tv_sub_zone_name"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/iv_color_cycling"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:scaleX="0.75"
                    android:scaleY="0.75"
                    android:src="@mipmap/ic_color_cycling"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_lighting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:scaleX="0.75"
                    android:scaleY="0.75"
                    android:src="@mipmap/ic_lighting" />


                <com.suke.widget.SwitchButton
                    android:id="@+id/sb_power"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:sb_background="#F7F7F7"
                    app:sb_uncheckcircle_color="#F7F7F7"
                    app:sb_checked_color="@color/control_tab_item_selected_color"
                    app:sb_show_indicator="false" />

                <TextView
                    android:id="@+id/btn_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:background="@drawable/bg_btn_select"
                    android:clickable="false"
                    android:focusable="false"
                    android:visibility="gone" />
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.daimajia.swipe.SwipeLayout>


    <RelativeLayout
        android:id="@+id/rl_brightness"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/_30sdp"
        android:paddingEnd="@dimen/_18sdp">

        <ImageView
            android:id="@+id/iv_brightness_low"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@mipmap/ic_brightness_low" />

        <SeekBar
            android:id="@+id/device_seek_bar_brightness"
            style="@style/Widget.SeekBar.Normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginBottom="@dimen/_12sdp"
            android:layout_toStartOf="@+id/iv_brightness_high"
            android:layout_toEndOf="@+id/iv_brightness_low"
            android:clickable="false"
            android:max="100"
            android:paddingLeft="@dimen/_6sdp"
            android:paddingRight="@dimen/_6sdp"
            android:progress="20" />

        <ImageView
            android:id="@+id/iv_brightness_high"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_4sdp"
            android:background="@mipmap/ic_brightness_high" />

    </RelativeLayout>


</LinearLayout>
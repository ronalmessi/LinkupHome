<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingEnd="4dp"
    android:paddingStart="8dp">


    <ImageView
        android:id="@+id/lamp_device_mesh_iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:scaleX="0.7"
        android:scaleY="0.7"
        android:tint="@color/lamp_group_tint_color" />

    <TextView
        android:id="@+id/lamp_device_mesh_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/lamp_device_mesh_iv_icon"
        android:ellipsize="end"
        android:gravity="center"
        android:padding="1dp"
        android:textColor="@color/text_colorPrimary"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/lamp_device_mesh_tv_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:drawablePadding="8dp"
        android:drawableEnd="@mipmap/state_icon_negative"
        android:ellipsize="end"
        android:gravity="center"
        android:padding="1dp"
        android:text="@string/state_disconnected"
        android:textColor="@color/text_colorPrimary"
        android:textSize="14sp" />

</RelativeLayout>